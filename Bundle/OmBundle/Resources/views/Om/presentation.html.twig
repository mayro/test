{% extends 'AdidasOmBundle::layout.html.twig' %}
{% block content %}
<!-- CORPS -->
<div class="page_om" id="page_presentation">
    <div class="mob_only" id="header_mob">
        <img src="{{asset('bundles/adidasom/images/logo_adidas_mob.gif')}}" alt="Adidas">
    </div>
    <div class="header_page xl">
        <!-- Image de fond -->
        <img class="visu_bg" src="{{asset('bundles/adidasom/images/visu_h_presentation.jpg')}}" alt="Adidas">
        <!-- /Image de fond -->
        <div class="conteneur_centre">
            <div class="logo_po"><img src="{{asset('bundles/adidasom/images/logo_po_head.png')}}" alt="Peuple olympien"></div>
            <div class="txt">
                <p class="titre">aux armes, olympien !</p>
                <!-- Video -->
                <div class="conteneur_video">
                    <div class="overlay"></div>
                    <div class="popin_video">
